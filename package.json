{
  "name": "wedi",
  "version": "0.3.0",
  "author": "Wendell Hu <wendellhu95@gmail.com>",
  "description": "A lightweight dependency injection (DI) library for TypeScript, along with a binding for React.",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "react-native": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "scripts": {
    "start": "webpack-dev-server --mode development --hot --progress --color --port 3000 --open",
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "ncc build src/index.ts -o dist -m -e react",
    "build:esm": "tsc --module ES6 --outDir esm",
    "test": "jest --coverage",
    "prettier": "prettier --write \"./{src,test}/**/*.{ts,tsx,css}\""
  },
  "devDependencies": {
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^10.12.18",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/webpack": "^4.4.23",
    "@types/webpack-env": "1.13.6",
    "@zeit/ncc": "^0.21.0",
    "codecov": "^3.5.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "rxjs": "^6.5.4",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.0"
  },
  "peerDependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  }
}