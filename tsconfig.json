{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "wedi": [
        "./src/index.ts"
      ],
      "wedi/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
